        <script type="text/javascript">
            /*菜单操作*/
            $('.easyui-accordion p a').click(function(){
                var title=$.trim($(this).text());
                var href=$(this).attr("data-href");
                $('.easyui-accordion p').removeClass('selected');
                $(this).parent().addClass('selected');
                addTab(title,href);
            });
            
            function addTab(title,url){
                if(!$('#tt').tabs('exists',title)){
                    $('#tt').tabs('add',{
                        title:title,
                        content:createFrame(url),
                        closable:true
                    });
                }else{
                    $('#tt').tabs('select',title);
                }
 
            }
            
           
            
            $('#tt').tabs({
                onClose: function(title){
                    $('.easyui-accordion p ').each(function(i,w){
                        if($(w).children('a').text()==title){
                            $(w).removeClass('selected');
                        }
                    });
                }
                               
            });
      
            
            function createFrame(url){	
                var s = '<iframe scrolling="auto" frameborder="0"  name="iframe_body" id="iframe_body" src="'+url+'" style="width:100%;height:99.7%;"></iframe>';
                return s;
            }
            
            /*锁屏*/
            $('.lockScreen').click(function(){
                $.get("?d=common&c=main&m=public_lock_screen");
                $('#dvLockScreen').css('display','');
            });
            
            
            $("input[name=dosubmit]").click(function(){

                var lock_password = $('#lock_password').val();
                if(lock_password=='') {
                    $('#lock_tips').html('<font color="red"><?php echo $password_can_not_be_empty;?></font>');
                    return false;
                }
                $.get("index.php?d=common&c=main&m=public_login_screenlock", { lock_password: lock_password},function(data){
                    console.log(data);
                    if(data==1) {
                        $('#dvLockScreen').css('display','none');
                        $('#lock_password').val('');
                        $('#lock_tips').html('<?php echo $lockscreen_status;?>');
                    } else if(data==3) {
                        $('#lock_tips').html('<font color="red"><?php echo $wait_1_hour;?></font>');
                    } else {
                        var strings = data.split('|');
                        $('#lock_tips').html('<font color="red"><?php echo $password_error_lock;?>'+strings[1]+'<?php echo $password_error_lock2;?></font>');
                    }
                });
            });
            
            /*退出*/
            $('.logout').click(function(){
                if(confirm("你确定退去后台吗？")){
                    location.href="?d=common&c=logout&m=index";
                }else{
                    return false;
                }
            });
        </script>
